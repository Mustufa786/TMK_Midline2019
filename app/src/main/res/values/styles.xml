<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>

        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="radiobutton" parent="AppTheme1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="checkbox" parent="AppTheme1">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">4dp</item>


    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#33b78ff7</item>
        <item name="sv_showcaseColor">@color/colorPrimaryDark</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="buttons" parent="AppTheme1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">1dp</item>
    </style>

   <!-- <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="spinnerStyle">@style/spinner</item>
        <item name="toolbarStyle">@style/ActionBar</item>


    </style>
    -->

    <style name="BackgroundStyle" parent="AppTheme1">
        <item name="android:background">#e4e4e4</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="labels" parent="AppTheme1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/background_grad</item>-->
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:elevation">1dp</item>


    </style>

    <style name="textInput" parent="AppTheme1">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">100000000dp</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:elevation">1dp</item>

    </style>

    <style name="spinner" parent="AppTheme1">
        <item name="android:background">@drawable/spinner_style</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="linerlayout_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="linerlayout_view_wt_bound">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--

    Edittext Start

    -->

    <!-- EditText Acept Characters Starts. -->
    <style name="EditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number  Starts. -->
    <style name="EditText_number">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number Decimal  Starts. -->
    <style name="EditText_number_de">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- EditText Acept Date Black Box.-->
    <style name="EditText_number_b_box">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!--Card View Start-->
    <style name="cardView">
        <item name="android:background">@color/dullWhileOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">3dp</item>
    </style>
    <!--Card View End-->

    <!--

    Edittext End

    -->

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textViewCenterGravity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="textView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#e3eaf3</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--Button View Start-->
    <style name="button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!--Button View End-->

    <style name="radiogroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:background">#efefef</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">#efefef</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActionBarTheme" parent="android:Widget.ActionBar">
        <item name="android:background">@drawable/background_grad_new</item>
        <item name="background">@drawable/background_grad_new</item>
    </style>

</resources>
